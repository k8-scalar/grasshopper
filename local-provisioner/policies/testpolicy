apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: test-wordpress
  namespace: wordpress
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/instance: wordpress
  policyTypes:
  - Egress
  - Ingress
  egress:
  - to:
    - podSelector:
        matchLabels:
          app.kubernetes.io/instance: wordpress
  ingress:
  - from:
    - podSelector:
        matchLabels:
          app.kubernetes.io/instance: wordpress

